.commentsList
  margin 2em 0
.commentsList:not(:empty):before
  content: 'Comments:'
  font-size fontsize1
  color #ccc
  border-bottom 1px solid #eee
  padding-bottom 0.5em
  display block
.comment + .comment
  margin-top 2em
.comment
  
  .content
    line-height 1.5em
    font-size fontsize1
    
  .meta
    margin-top 1em
    font-size fontsize3
    color grey
    text-transform lowercase
    a
      color grey