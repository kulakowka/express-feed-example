fontsize1 = 14px
fontsize2 = 22px
fontsize3 = 13px
fontsize4 = 28px
fontfamily1 = "Lucida Grande", Helvetica, Arial, sans-serif

@import '_variables'
@import 'selectize'
@import 'buttons'
@import 'dropdown'
@import 'code'
@import 'comments'
@import 'articles'
@import 'users'
@import 'hubs'
@import 'pageTabs'
@import 'notices'
@import 'forms'


body
  padding 0px
  margin 0
  font-size fontsize1 
  font-family fontfamily1
  background #f8f8ff

*
  box-sizing border-box
  
hr
  border 0
  margin 1em 0
  padding 0
  height 1px 
  background #eee
a
  color #00B7FF
  text-decoration none
  &:hover
    text-decoration underline

.layout
  max-width 800px
  margin auto
  background #fff
  > .content 
    padding 0 20px
footer
  background #eee
  margin 50px 0 0
  padding 20px
  font-size fontsize3
  border-top 1px solid #eee
  color #999
header
  background #4078c0
  padding 0 20px
  margin 0 0 20px
  min-height 40px
  .logo
    float left
    font-size 1.2em
    line-height 40px
    a
      color white
      font-weight bold
  .leftMenu
    float left
  .rightMenu
    float right
  ul
    margin 0
    paddin 0
    list-style none
    li
      margin 0 10px
      paddin 0
      display inline-block
      a.item
        display inline-block
        line-height 40px
        color white
      a.item:first-letter
        text-transform uppercase 
      a.item + a.item
        display inline-block
        margin-left 20px
