fontsize1 = 16px
fontsize2 = 22px
fontsize3 = 13px
fontfamily1 = "Lucida Grande", Helvetica, Arial, sans-serif

@import 'selectize'
@import 'code'
@import 'comments'
@import 'articles'
@import 'users'
@import 'tags'
@import 'forms'


body
  padding 50px
  font-size fontsize1 
  font-family fontfamily1

*
  box-sizing border-box
  
hr
  border 0
  margin 1em 0
  padding 0
  height 1px 
  background #eee
a
  color #00B7FF
  text-decoration none
  &:hover
    text-decoration underline

.layout
  max-width 600px
  margin auto
  
header
  background aliceblue
  padding 10px
  margin 0 0 20px
  
  a + a
    display inline-block
    margin-left 20px
