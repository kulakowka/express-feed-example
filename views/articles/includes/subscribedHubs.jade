if subscriptions.length
  .userNotice
    = __("You are subscribed to hubs: ")
    each subscription, index in subscriptions
      if index
        = ", "
      a(href="/hubs/"+subscription.hub.slug)= subscription.hub.title
else
  .userNotice
    = __('Your subscription is empty. Please subscribe to ')
    a(href="/hubs")= __('hubs')
    = __(' that your interested.')