form.articleForm(action=(article._id ? "/articles/"+article._id+"?_method=PUT" : "/articles") method="post" autocomplete="off" enctype="application/x-www-form-urlencoded")
  input(type="hidden" name="slug" placeholder="Slug" value=article.slug maxLength="200" )
  div
    input(type="text" name="title" placeholder="Title" value=article.title maxLength="150" required)
  div
    textarea(name="summary" rows="6" placeholder="Article summary. Plain text only." required)= article.summary
  div
    .tabs
      .tab.active(data-frame="write") Write
      .tab(data-frame="preview") Preview
    .frame.write.open
      
      textarea(name="content" rows="6" placeholder="Article content. Markdown, plain text." required)= article.content
    .frame.preview
  div
    select(name="tags" multiple placeholder="Tags")
      each tag in tags
        if article.tags && article.tags.filter(_tag => _tag._id.equals(tag._id)).length
          option(value=tag._id selected)= tag.title
        else
          option(value=tag._id)= tag.title
  div
    button(type="submit") save