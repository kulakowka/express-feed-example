.user
  h2
    a.username(href="/users/"+user.username)= user.username
  .info
    p emailConfirmed: #{user.emailConfirmed}
    p isAdmin: #{user.isAdmin}
    p isDeleted: #{user.isDeleted}
  .meta
    a.articlesCount(href="/users/"+user.username+"/articles") #{user.articlesCount} articles
    = " | "
    a.commentsCount(href="/users/"+user.username+"/comments") #{user.commentsCount} comments
    = " | "
    a.commentsCount(href="/users/"+user.username+"/hubs") #{user.hubsCount} hubs
    = " | "
    time(title=moment(user.createdAt).calendar() datetime=moment(user.createdAt).format())= moment(user.createdAt).fromNow()
    