extends ../layout

block content
  h1 Register

  form.js-form-register
    .field
      label.field-label(for="email-field") email:
      input.field-input(id="email-field" type="text" name="email" placeholder="email" maxLength="20" required)
    .field
      label.field-label(for="username-field") username:
      input.field-input(id="username-field" type="text" name="username" placeholder="username" maxLength="20" required)
    .field
      label.field-label(for="password-field") password:
      input.field-input(id="password-field" type="password" name="password" placeholder="password" required)
    .field
      button.btn.btn-submit(type="submit") Register