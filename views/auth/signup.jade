extends ../layout.jade

block head
  title Sign up

block content
  h1 Sign up

  form.authForm.js-form-signup
    .field
      label.field-label(for="username-field") Username:
      input.field-input(id="username-field" type="text" name="username" placeholder="username" autocomplete="off" maxLength="20" required)
    .field
      label.field-label(for="email-field") Email:
      input.field-input(id="email-field" type="text" name="email" placeholder="email" autocomplete="off" maxLength="20" required)
    .field
      label.field-label(for="password-field") Password:
      input.field-input(id="password-field" type="password" name="password" placeholder="password" autocomplete="off" required)
    .field
      label.field-label(for="password-confirm-field") Confirm password:
      input.field-input(id="password-confirm-field" type="password" name="passwordConfirm" placeholder="Repeat password" autocomplete="off" required)        
    .field
      button.btn.btn-submit(type="submit") Submit